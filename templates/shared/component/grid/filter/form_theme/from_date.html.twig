{% extends '@SyliusBootstrapAdminUi/shared/form_theme.html.twig' %}

{% block date_widget %}
    {% set attr = attr|merge({
        'data-model': 'fromDate',
        'data-action': 'change->live#action change->date-filter#updateFromDateUrl',
        'data-live-action-param': 'onDateChange',
    }) -%}
    {{ parent() }}
{% endblock %}

{% block time_widget %}
    {% set attr = attr|merge({
        'data-model': 'fromTime',
        'data-action': 'change->live#action change->date-filter#updateFromTimeUrl',
        'data-live-action-param': 'onDateChange',
    }) -%}
    {{ parent() }}
{% endblock %}
