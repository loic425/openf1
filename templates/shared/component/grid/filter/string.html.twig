{% form_theme form '@SyliusBootstrapAdminUi/shared/form_theme.html.twig' %}

<div class="sylius-filters__string" {{ attributes.defaults(stimulus_controller('string-filter', {
    formName: form.value.vars.full_name,
})) }}>
    {% if form.type is defined %}
        {{ form_row(form.type, {label: filter.label}) }}
    {% endif %}

    {{ form_row(form.value, {attr: {
        placeholder: form.value.vars.label,
        'data-action': 'keyup->live#action keyup->string-filter#updateUrl',
        'data-live-action-param': 'onValueChange',
        'data-model': 'norender|value',
        autocomplete: 'off',
    }, label: form.type is defined ? form.value.vars.label : filter.label}) }}
</div>
